<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Client.GUI.Controllers.MailController">
   <children>
      <VBox prefHeight="400.0" prefWidth="150.0">
         <children>
            <Label alignment="CENTER" contentDisplay="TOP" prefHeight="53.0" prefWidth="154.0" style="-fx-background-color: beige;" text="Mail List" />
            <ListView fx:id="mailList" onMouseClicked="#onItemClicked" prefHeight="348.0" prefWidth="150.0" />
         </children>
      </VBox>
      <VBox prefHeight="400.0" prefWidth="452.0">
         <children>
            <VBox prefHeight="140.0" prefWidth="451.0">
               <children>
                  <TextArea fx:id="mailHeader" prefHeight="200.0" prefWidth="200.0" />
               </children>
            </VBox>
            <ScrollPane prefHeight="261.0" prefWidth="451.0">
               <content>
                  <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="258.0" prefWidth="448.0">
                     <children>
                        <TextArea fx:id="mailContent" prefHeight="261.0" prefWidth="471.0" />
                     </children>
                  </AnchorPane>
               </content>
            </ScrollPane>
         </children>
      </VBox>
   </children>
</HBox>
